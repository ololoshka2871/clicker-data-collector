{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "web",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "clicker_data_collector_server=trace,clicker_data_collector=debug",
            },
            "cargo": {
                "args": [
                    "build",
                    "--bin=clicker-data-collector-server"
                ],
                "filter": {
                    "kind": "bin"
                }
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "open chrome local",
            "url": "http://localhost:3289",
            "webRoot": "${workspaceFolder}/src/bin/clicker-data-collector-server/wwwroot",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "*.ts": "${webRoot}/ts/*.ts",
            }
        },
    ]
}